<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/iv_nav_pp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_nav_profile_picture" />

    <TextView
        android:id="@+id/tv_nav_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@+id/iv_nav_pp"
        android:text="Habib Abdullah"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_nav_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_nav_name"
        android:layout_below="@+id/tv_nav_name"
        android:textStyle="normal"
        android:text="Initiator"
        android:textSize="12sp"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/tv_nav_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_nav_type"
        android:layout_below="@+id/tv_nav_type"
        android:text="Riyad, Saudi Arabia"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/iv_nav_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tv_nav_name"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_edit" />

    <TextView
        android:id="@+id/tv_nav_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_nav_pp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/white" />

</RelativeLayout>