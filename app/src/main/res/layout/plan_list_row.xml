<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/viewProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_pics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/projectImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ppimg" />

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="Habib Abdullah"
                android:textColor="#8c8c8c"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="10 March 2018"
                android:textColor="#8c8c8c"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/layout_pics"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/layout_pics"
            android:text="SOMETHING"
            android:textColor="#8c8c8c"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTV"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/layout_pics"
            android:text="Price: SR 670-SR 750"
            android:textColor="#8c8c8c"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/seemoreImg"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignStart="@+id/priceTV"
            android:layout_below="@+id/priceTV"
            android:layout_marginTop="8dp"
            android:src="@drawable/seemore" />


    </RelativeLayout>

</RelativeLayout>