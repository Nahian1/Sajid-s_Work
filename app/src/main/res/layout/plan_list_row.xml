<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/viewProject"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/layout_pics"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="30"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/projectImg"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_image_placeholder" />

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLength="14"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Habib Abdullah"
            android:textColor="#8c8c8c"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="10 March 2018"
            android:textColor="#8c8c8c"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="SOMETHING"
            android:textColor="#8c8c8c"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Price: SR 670-SR 750"
            android:textColor="#8c8c8c"
            android:textSize="14sp" />

        <Button
            android:id="@+id/seemoreImg"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_shape_blue"
            android:clickable="false"
            android:text="@string/see_more"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>