<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#535353"
                 />
            <TextView
                android:id="@+id/priceTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: SR: 670 - SR: 780"
                android:textSize="15sp"
                android:textColor="#535353"
                 />
            <ImageView
                android:id="@+id/demoIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginTop="20dp"
                android:src="@drawable/imgdemo"/>

            <TextView
                android:id="@+id/shortDetailsTV"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Short Description"
                android:textSize="13sp"
                android:textColor="#535353" />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/profileIV"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/img_initiator_profile_picture" />

                <TextView
                    android:id="@+id/nameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/profileIV"
                    android:text="Habib Abdullah"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/typeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/nameTV"
                    android:layout_below="@+id/nameTV"
                    android:text="Initiator"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="#535353" />

                <TextView
                    android:id="@+id/addressTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/typeTV"
                    android:layout_below="@+id/typeTV"
                    android:text="Riyad, Saudi Arabia"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:textColor="#535353"/>

                <TextView
                    android:id="@+id/detailsTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileIV"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:text="Initiator Details"
                    android:textColor="#535353" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/bankname"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:paddingTop="12dp"
                    android:textAlignment="viewStart"
                    android:text="Bank Name"
                    android:textSize="14sp"
                    android:textColor="#898989" />

                <TextView
                    android:id="@+id/bankNameTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textAlignment="viewStart"
                    android:text="Example Bank Limited"
                    android:paddingTop="10dp"
                    android:textColor="#898989"
                    android:textSize="14sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/lineoflist"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/personName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:text="Bank Account Name"
                    android:textAlignment="viewStart"
                    android:textColor="#898989"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/personNameTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:text="Khalid Bin Walid"
                    android:paddingTop="10dp"
                    android:textColor="#898989"
                    android:textSize="14sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/lineoflist"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:paddingTop="10dp"
                    android:text="Bank Account Number"
                    android:textAlignment="viewStart"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="#898989" />

                <TextView
                    android:id="@+id/accountNumberTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textAlignment="viewStart"
                    android:text="100.110.123456"
                    android:paddingTop="10dp"
                    android:textColor="#898989"
                    android:textSize="14sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/lineoflist"/>
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/priceDetail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:textAlignment="viewStart"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Amount to be Paid for Details"
                    android:textSize="14sp"
                    android:textColor="#898989" />

                <TextView
                    android:id="@+id/payPriceTV"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/priceDetail"
                    android:background="@android:color/transparent"
                    android:textAlignment="viewStart"
                    android:hint="SR: 780"
                    android:paddingTop="10dp"
                    android:textColor="#898989"
                    android:textSize="14sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/lineoflist"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/seeMoreIV"
            android:layout_gravity="center"
            android:onClick="seeMore"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/seemoredetails"/>
    </LinearLayout>
</ScrollView>